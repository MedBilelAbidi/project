def getVersion() {
    def version = bat(script: 'git rev-parse --short HEAD', returnStatus: true).trim()
    return version
}

pipeline {
    agent any

    environment {
        DOCKER_TAG = getVersion()
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build and Deploy') {
            steps {
                script {
                    // Build the Docker image with the dynamic tag
                    bat "docker-compose build ."

                    // Run Docker Compose
                    bat 'docker-compose up -d'
                }
            }
        }
    }
}
