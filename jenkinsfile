
pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
           stage('Cleanup') {
            steps {
                script {
                    // Stop and remove existing containers with the same name
                    bat 'docker rm -f react-app-1 || true'
                }
            }
        }

        stage('Build and Deploy') {
            steps {
                script {
                    // Build the Docker image with the dynamic tag
                    bat "docker-compose build"

                    // Run Docker Compose
                    bat 'docker-compose up -d'
                }
            }
        }
    }
}
